                      " *            \"value\": \"500g\",",
                      " *            \"description\": \"500g\",",
                      " *            \"inStock\": true,",
                      " *            \"visible\": true,",
                      " *            \"mainMedia\": \"null\",",
                      " *            \"mediaItems\": []",
                      " *          }",
                      " *        ]",
                      " *      },",
                      " *      \"Ground for\": {",
                      " *        \"optionType\": \"drop_down\",",
                      " *        \"name\": \"Ground for\",",
                      " *        \"choices\": [",
                      " *          {",
                      " *            \"value\": \"Stovetop\",",
                      " *            \"description\": \"Stovetop\",",
                      " *            \"inStock\": true,",
                      " *            \"visible\": true,",
                      " *            \"mainMedia\": \"null\",",
                      " *            \"mediaItems\": []",
                      " *          },",
                      " *          {",
                      " *            \"value\": \"Filter\",",
                      " *            \"description\": \"Filter\",",
                      " *            \"inStock\": true,",
                      " *            \"visible\": true,",
                      " *            \"mainMedia\": \"null\",",
                      " *            \"mediaItems\": []",
                      " *          }",
